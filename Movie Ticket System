print('\n=== MOVIE TICKET SYSTEM ===')

while True:
    try:
        day = input('Day (weekday/weekend): ').lower().strip()
        if day == 'weekday':
            base_p = 200
            break
        elif day == 'weekend':
            base_p = 300
            break
        else:
            raise ValueError
    
    except ValueError:
        print("Invalid day. Please enter 'weekday' or 'weekend'.")

while True:
    try:
        customer_type = input('Type (regular/student/senior): ').lower().strip()
        if customer_type not in ["regular", "student", "senior"]:
            raise ValueError
        else:
            break
    
    except ValueError:
        print("Invalid customer type. Regular/Student/Senioro only.")

while True:
    try:
        time = int(input('Showtime hour (9-22 24 Hour Format): '))
        if time < 9 or time > 22:
            raise ValueError
        else:
            break
    
    except ValueError:
        print('Invalid time selected. (The cinema operates during 9-22 only.)')
        
while True:
    try:
        ticket_qty = int(input('Number of tickets: '))
        if ticket_qty <= 0:
            raise ValueError
        else:
            break
    
    except ValueError:
        print('A minimum of 1 ticket is required.')

user_base_disc = 0
matinee_base_disc = 0
group_base_disc = 0

student_disc = 0.20
senior_disc = 0.30


ticket_qty_calc = base_p * ticket_qty

# User discount
if customer_type == 'student':
    user_disc = ticket_qty_calc * 0.20
elif customer_type == 'senior':
    user_disc = ticket_qty_calc * 0.30
 
# Matinee discount
if time < 12:
    matinee_disc = ticket_qty_calc * 0.10
 
# Group discount
if ticket_qty >= 5:
    group_disc = ticket_qty_calc * 0.05
 
print('\n--- Receipt ---')
print(f'Base Price: {base_p} x {ticket_qty} = {ticket_qty_calc:,.2f}')
 
if customer_type == 'student':
    print(f'Student Discount (20%): -{user_disc:,.2f}')
elif customer_type == 'senior':
    print(f'Senior Discount (30%): -{user_disc:,.2f}')
 
if matinee_disc > 0:
    print(f'Matinee Discount (10%): -{matinee_disc:,.2f}')
 
if group_disc > 0:
    print(f'Group Discount (5%): -{group_disc:,.2f}')
 
final_total = ticket_qty_calc - user_disc - matinee_disc - group_disc
 
print(f'TOTAL: {final_total:,.2f}')
print('Thank you for your purchase!')
        
            
            
            
            
            
            
